# --- Audio Stream Configuration ---
# 麦克风采样率 (赫兹), 16000是语音识别模型的标准
AUDIO_SAMPLE_RATE=16000
# 每次从麦克风读取的音频块大小 (采样点数)。512大约是32毫秒，适合VAD实时检测
AUDIO_CHUNK_SAMPLES=512

# --- VAD & Trigger Configuration ---
# Silero-VAD模型的检测阈值 (0到1)，越高越不容易将背景音误判为语音
VAD_SENSITIVITY=0.5
# 判断为“长静音”需要持续多少秒，这是主要的触发条件
SILENCE_THRESHOLD_S=0.9
# 为防止用户一直说话，设置一个最长录音秒数作为强制触发
MAX_SPEECH_S=15

# --- Whisper Transcription Configuration ---
# faster-whisper模型大小: "tiny", "base", "small", "medium", "large-v2"
WHISPER_MODEL_SIZE="small"
# 计算设备: "cuda" for GPU, "cpu" for CPU
DEVICE="cpu"
# 转写结果超过多少个字就立即提交，不等静音。设为999则基本禁用此功能。
MAX_WORDS_TRIGGER=999

# --- Language Configuration ---
# 指定Whisper转写的语言，"zh"代表中文
LANGUAGE_CODE="zh"

# --- TTS (Text-to-Speech) Configuration ---
# TTS引擎类型: "edge" (推荐，高质量), "pyttsx3" (备用)
TTS_ENGINE="edge"
# Edge TTS语音选择 - 中文男声 (更权威)
TTS_VOICE_ZH="zh-CN-YunxiNeural"
# Edge TTS语音选择 - 英文男声
TTS_VOICE_EN="en-US-ChristopherNeural"
# 语速调整 (百分比，如 +30% 表示比正常快30%)
TTS_RATE="+30%"
# 音量调整 (百分比，如 +20% 表示比正常大20%)
TTS_VOLUME="+20%"
# 音调调整 (百分比，如 +5% 表示比正常高5%)
TTS_PITCH="+5%"

# pyttsx3备用TTS设置 (当Edge TTS不可用时)
PYTTSX3_RATE=220
PYTTSX3_VOLUME=0.9

# --- 语音打断配置 ---
# 检测到用户说话后，延迟多少秒打断当前TTS播放 (模拟人类反应时间)
SPEECH_INTERRUPT_DELAY=0.5
# 音频分块播放大小 (秒)，越小越容易被打断，但可能影响播放流畅度
AUDIO_CHUNK_DURATION=0.1

